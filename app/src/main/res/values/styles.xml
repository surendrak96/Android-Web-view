<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="SuperActivityToast_Progress_ProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:color">@color/accent</item>

    </style>


    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:tint">@color/photo_tint</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:onClick">showPhoto</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

</resources>